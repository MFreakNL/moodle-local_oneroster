<div class="col-md-12">
    <div class="mb-3">{{schoolname}} {{#str}}classes, local_oneroster{{/str}} (<span id="numberofclasses">{{numberofclasses}}</span>)</div>
</div>
<div class="col-md-12">
    <table class="generaltable">
        <thead>
        <tr>
            <th scope="col">
                <input type="checkbox" name="checkall" id="checkall" />
            </th>
            <th scope="col">{{#str}}courses, local_oneroster{{/str}}</th>
            <th scope="col">{{#str}}classname, local_oneroster{{/str}}</th>
            <th scope="col">{{#str}}grades, local_oneroster{{/str}}</th>
            <th scope="col">{{#str}}teachers, local_oneroster{{/str}}</th>
            <th scope="col">{{#str}}students, local_oneroster{{/str}}</th>
            <th scope="col">{{#str}}rslevels, local_oneroster{{/str}}</th>
            <th scope="col">{{#str}}status, local_oneroster{{/str}}</th>
        </tr>
        </thead>
        <tbody>
        {{#classes}}
            <tr>
                <td class="cell"><input class="logcheckbox" name="classes[]" value="{{classid}}" type="checkbox"></td>
                <td class="text-left">{{course}}</td>
                <td class="text-left">{{title}}</td>
                <td class="text-left">{{grades}}</td>
                <td class="text-left">{{teachers}}</td>
                <td class="text-left">{{students}}</td>
                <td class="text-left">{{levels}}</td>
                <td class="text-left">{{status}}</td>
            </tr>
        {{/classes}}
        </tbody>
    </table>
</div>